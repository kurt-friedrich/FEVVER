<div class="form-wrapper row">
  <div class="small-12 medium-5 large-4 columns">
      <p class="form-title">EDIT BAND</p>
      <!-- EDIT NAME -->
      <%= simple_form_for (@band) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name, label: 'name' %>
        <%= f.button :submit, 'UPDATE' %>
      <% end %>
      <!-- EDIT MEMBERS -->
      <%= render 'members' %>
      <%= link_to 'ADD MEMBER', new_band_invite_path(band_id: @band.id), class:"button" %>
      <br><br>
      <%= link_to 'DELETE BAND', band_path(@band), method: :delete, class: "button alert", data: {confirm: "WARNING: Are you ABSOLUTELY SURE you want to delete this band? All songs, notes, and members will be permanently lost."} %>
      <br><br>
      <%= link_to 'cancel', bands_path %>
  </div>
</div>
