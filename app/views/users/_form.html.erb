<%= simple_form_for(@user) do |f| %>
    <% if @token != nil %>
      <%= hidden_field_tag :invite_token, @token %>
    <% end %>
    <%= f.input :email %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, 'submit' %>
<% end %>
