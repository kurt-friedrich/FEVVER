<%= simple_form_for(@user) do |f| %>
    <% if @token != nil %>
      <%= hidden_field_tag :invite_token, @token %>
    <% end %>
    <%= f.input :email, label: 'email', required: false %>
    <%= f.input :username, label: 'username', required: false %>
    <%= f.input :password, label: 'password', required: false %>
    <%= f.input :password_confirmation, label: 'confirm password', required: false %>
    <%= f.button :submit, 'SUBMIT' %>
<% end %>
