<%= simple_form_for @song, url: band_songs_path do |f| %>
  <%= f.simple_fields_for :attachments do |a| %>
    <%= a.attachment_field :file, direct: true %>
  <% end %>
  <%= f.input :name, label: 'name', class: 'error' %>
  <%= f.input :key, label: 'key' %>
  <%= f.input :lyrics, label: 'lyrics' %>
  <%= f.input :note, label: 'notes' %>
  <%= f.button :submit, 'CREATE' %>
<% end %>
