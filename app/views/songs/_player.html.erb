<div class="mp small-12 columns">
  <%= audio_tag attachment_url(@song.attachments.first, :file), class: "mp-audio" %>

  <div id="mp-waveform"></div>
  <div id="mp-timeline"></div>
  <section class="mp-controls">
    <ul>
      <li><a class="mp-controls-play button" href="#play">
        <i class="fi-play"></i>
      </a></li>
      <li><a class="mp-controls-restart button" href="#restart">
        <i class="fi-previous"></i>
      </a></li>
      <li><a class="mp-controls-replay button" href="#replay">
        <i class="fi-rewind-ten"></i>
      </a></li>
      <li><a class="mp-controls-loop button" href="#loop">
        <i class="fi-loop"></i>
      </a></li>
    </ul>
  </section>
</div>

