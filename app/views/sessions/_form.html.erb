<%= simple_form_for :session, url: login_create_path, html: { class: 'form-horizontal' } do |f| %>

  <div class="form-inputs">
    <%= f.input :email, autofocus: true %>
    <%= f.input :password %>
  </div>

  <div class="form-actions submit-button">
    <%= f.button :submit, "submit" %>
  </div>
<% end %>
